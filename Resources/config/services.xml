<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cart.payment.method.po.class">MobileCart\PurchaseOrderPaymentBundle\Service\PurchaseOrderPaymentService</parameter>
        <parameter key="cart.listener.payment.method.po.js.class">MobileCart\PurchaseOrderPaymentBundle\EventListener\Checkout\PurchaseOrderPaymentJavascript</parameter>
        <parameter key="cart.payment.method.po.enabled">1</parameter>
    </parameters>

    <services>

        <!-- Service : Purchase Order Payment Method Service -->
        <service id="cart.payment.method.po" lazy="true" class="%cart.payment.method.po.class%">
            <call method="setFormFactory">
                <argument type="service" id="form.factory" />
            </call>
        </service>

        <!-- Event Listener: Collect Purchase Order Payment Method Service -->
        <service id="cart.listener.payment.method.po" lazy="true" class="%cart.listener.payment.method.handler.class%">
            <tag name="kernel.event_listener" event="payment_method.collect" method="onPaymentMethodCollect" priority="50" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.po" />
            </call>
            <call method="setEntityService">
                <argument type="service" id="cart.entity" />
            </call>
            <call method="setCartSessionService">
                <argument type="service" id="cart.session" />
            </call>
            <call method="setIsEnabled">
                <argument type="string">%cart.payment.method.po.enabled%</argument>
            </call>
        </service>

        <!-- Event Listener: Add Javascript to Checkout -->
        <service id="cart.listener.payment.method.po.js" lazy="true" class="%cart.listener.payment.method.po.js.class%">
            <tag name="kernel.event_listener" event="checkout.view.return" method="onCheckoutViewReturn" priority="60" />
            <call method="setPaymentMethodService">
                <argument type="service" id="cart.payment.method.po" />
            </call>
        </service>
    </services>
</container>
