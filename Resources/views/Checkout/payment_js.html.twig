<script type="text/javascript">
$(function() {

    paymentWidget.addPostDataGetter("{{ code }}", function(){
        var code = "{{ code }}";

        var numberEl = $('#payment-' + code).find('input[name="' + code + '[reference_nbr]"]');
        var poNumber = numberEl.val();
        console.log('PO : ' + poNumber);
        return {
            payment_method: code,
            "po[reference_nbr]": poNumber
        };
    });
});
</script>

